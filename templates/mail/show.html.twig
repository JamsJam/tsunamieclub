{% extends 'base.html.twig' %}

{% block title %}Mail{% endblock %}

{% block body %}
    <h1>Mail</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mail.id }}</td>
            </tr>
            <tr>
                <th>Sujet</th>
                <td>{{ mail.sujet }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ mail.message }}</td>
            </tr>
            <tr>
                <th>SendAt</th>
                <td>{{ mail.sendAt ? mail.sendAt|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_mail_index') }}">back to list</a>

    <a href="{{ path('app_mail_edit', {'id': mail.id}) }}">edit</a>

    {{ include('mail/_delete_form.html.twig') }}
{% endblock %}
