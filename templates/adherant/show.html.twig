{% extends 'base.html.twig' %}

{% block title %}Adherant{% endblock %}

{% block body %}
    <h1>Adherant</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ adherant.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ adherant.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ adherant.roles ? adherant.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ adherant.password }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ adherant.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ adherant.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ adherant.prenom }}</td>
            </tr>
            <tr>
                <th>DateDeNaissance</th>
                <td>{{ adherant.dateDeNaissance ? adherant.dateDeNaissance|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ adherant.sexe }}</td>
            </tr>
            <tr>
                <th>IdRole</th>
                <td>{{ adherant.idRole }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_adherant_index') }}">back to list</a>

    <a href="{{ path('app_adherant_edit', {'id': adherant.id}) }}">edit</a>

    {{ include('adherant/_delete_form.html.twig') }}
{% endblock %}
